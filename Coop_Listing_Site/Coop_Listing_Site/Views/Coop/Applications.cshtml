@model IEnumerable<Coop_Listing_Site.Models.Application>
@{
    ViewBag.Title = "Applications";
}

<h2>Applications</h2>
@if (Model != null)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Student.User.LastName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Student.User.FirstName)
                </th>
                <th>
                    @* This is for adding the L# to the list of applications *@
                    @Html.DisplayNameFor(model => model.Student.LNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Opportunity.CompanyName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Opportunity.CoopPositionTitle)
                </th>

            </tr>
        </thead>

        <tbody>
            @foreach (var app in Model)
            {

                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => app.Student.User.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => app.Student.User.FirstName)
                    </td>
                    <td>
                        @* This is for displaying the L# of the student that has applied for the position *@
                        @Html.DisplayFor(modelItem => app.Student.LNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => app.Opportunity.CompanyName)
                    </td>
                    <td>
                        @Html.ActionLink(app.Opportunity.CoopPositionTitle, "AppDetails", new { id = app.ApplicationId })
                    </td>


                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No Applications are available at this time.</p>



}