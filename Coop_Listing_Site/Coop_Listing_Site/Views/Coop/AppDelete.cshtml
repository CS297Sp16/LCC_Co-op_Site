@model Coop_Listing_Site.Models.Application
@{
    ViewBag.Title = "Delete Applicaton";
}

<h2>Delete Applicaton</h2>

<h3>Are you sure you want to permanently remove this application?</h3>


<div>
    <h4>Cooperative Opportunity to be deleted</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            <strong>@Html.DisplayNameFor(model => model.Student.User.LastName)</strong>
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Student.User.LastName)
        </dd>
        <dt>
            <strong>@Html.DisplayNameFor(model => model.Student.User.FirstName)</strong>
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Student.User.FirstName)
        </dd>
        <dt>
            <strong>@Html.DisplayNameFor(model => model.Opportunity.CoopPositionTitle)</strong>
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Opportunity.CoopPositionTitle)
        </dd>
        <dt>
            <strong>@Html.DisplayNameFor(model => model.Message)</strong>
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Message)
        </dd>
        <dt>
            <strong>@Html.DisplayNameFor(model => model.Files)</strong>
        </dt>
        <dd>
            @foreach (var file in Model.Files)
            {
                @Html.ActionLink(file.FileName, "GetFile", new { id = file.UserFileID })
                <br />
            }
        </dd>
        
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to the opportunity list", "Index")
        </div>
    }
</div>