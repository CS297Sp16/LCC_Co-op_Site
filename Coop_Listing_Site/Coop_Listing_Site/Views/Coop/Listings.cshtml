@model IEnumerable<Coop_Listing_Site.Models.Opportunity>
@{
    ViewBag.Title = "Opportunity Listing";
}

<h2>Opportunity Listing</h2>
@if (Model != null)
{
<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CompanyName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CoopPositionTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Paid)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OpeningsAvailable)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TermAvailable)
            </th>
        </tr>
    </thead>

    <tbody>
        @foreach (var opp in Model)
        {

            <tr>
                <td>
                    @Html.DisplayFor(modelItem => opp.CompanyName)
                </td>
                <td>
                    @Html.ActionLink(opp.CoopPositionTitle, "Details", new { id = opp.OpportunityID })
                </td>
                <td>
                    @if (opp.Paid)
                    {
                        @:Yes
                    }
                    else
                    {
                        @:No
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => opp.OpeningsAvailable)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => opp.TermAvailable)
                </td>
            </tr>
        }
    </tbody>
</table>
}
else
{
    <p>No Co-op Opportunities are available at this time.</p>
}