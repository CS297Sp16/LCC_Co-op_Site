@model Coop_Listing_Site.Models.ViewModels.OpportunityModel

@{
    ViewBag.Title = "Details";
    ViewBag.Disclaimer = @"Disclaimer: The contact information given below is subject to the terms and conditions of our privacy policy.
                                       Distribution of any private information is not allowed. As a courtesy please do not use any of the
                                       supplied contact information until your advisor grants you privileges.";
}
@*one set of these buttons needs to be taken out, but lets show Gerry with both and let him decide*@
<h2>Opportunity Details
    @Html.ActionLink("Back to List", "Index", new { id = Model.OpportunityID }, new { @class = "btn btn-primary"})
    @Html.ActionLink("Apply", "Upload", new { id = Model.OpportunityID }, new { @class = "btn btn-primary"})
</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.CompanyName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CompanyName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ContactName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ContactName)
        </dd>

        @if (User.IsInRole("Coordinator") || User.IsInRole("Admin"))
        {
            <dt>
                @Html.DisplayNameFor(model => model.ContactNumber)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ContactNumber)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.ContactEmail)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ContactEmail)
            </dd>
        }

        <dt>
            @Html.DisplayNameFor(model => model.Location)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Location)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CompanyWebsite)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CompanyWebsite)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.AboutCompany)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AboutCompany)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.AboutDepartment)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AboutDepartment)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CoopPositionTitle)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CoopPositionTitle)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CoopPositionDuties)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CoopPositionDuties)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Qualifications)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Qualifications)
        </dd>

        @if (Model.GPA > 0)
        {
            <dt>
                @Html.DisplayNameFor(model => model.GPA)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.GPA)
            </dd>
        }

        <dt>
            @Html.DisplayNameFor(model => model.Paid)
        </dt>

        <dd>
            @if (Model.Paid)
            {
                @:Yes
            }
            else
            {
                @:No
            }
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Duration)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Duration)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.OpeningsAvailable)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.OpeningsAvailable)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.TermAvailable)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TermAvailable)
        </dd>
    </dl>
</div>
<p>
    @Html.ActionLink("Back to List", "Index", new { id = Model.OpportunityID }, new { @class = "btn btn-primary" }) 
    @Html.ActionLink("Apply", "Upload", new { id = Model.OpportunityID }, new { @class = "btn btn-primary" })
</p>

