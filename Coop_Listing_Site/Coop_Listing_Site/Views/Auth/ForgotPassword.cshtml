
@{
    ViewBag.Title = "Forgot Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Forgotten Password</h2>
@if (ViewBag.Error != null && ViewBag.Error)
{
    <h2>An Error Has Occurred</h2>
    <p>The email information has not been properly set. Password resets rely on sending emails to the user. Please contact your coop coordinator or the site administrator about this issue.</p>
}
else
{
    if (ViewBag.ReturnMessage != null)
    {
        <p>@ViewBag.ReturnMessage</p>
    }

    using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />

            <div class="form-group">
                @Html.Label("Email Address", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.Editor("email", new { htmlAttributes = new { @class = "form-control", @type = "email" } })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Submit" class="btn btn-default" />
                </div>
            </div>

        </div>
    }
}