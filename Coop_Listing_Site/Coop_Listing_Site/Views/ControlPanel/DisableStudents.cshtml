
@{
    ViewBag.Title = "Disable Students";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Disable Student Accounts</h2>

@if (ViewBag.Message != null)
{
    <p>@ViewBag.Message</p>
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal text-center">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.Label("Enabled Students", new { @class = "control-label" })
            <br />
            <div class="">
                @Html.DropDownList("Students", (MultiSelectList)ViewBag.Students, new { multiple = "multiple" })
            </div>
        </div>

        <div class="form-group">
            <div>
                <input type="submit" value="Disable" class="btn btn-default" />
            </div>
        </div>

    </div>

}
