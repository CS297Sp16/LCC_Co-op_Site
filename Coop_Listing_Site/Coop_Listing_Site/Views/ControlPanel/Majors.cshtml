@model IEnumerable<Coop_Listing_Site.Models.Major>

@{
    ViewBag.Title = "Majors";
}

<h2>Majors</h2>

<p>
    @Html.ActionLink("Create New", "AddMajor")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DepartmentID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MajorName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DepartmentID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MajorName)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditMajor", new { id=item.MajorID }) |
            @Html.ActionLink("Delete", "DeleteMajor", new { id=item.MajorID })
        </td>
    </tr>
}

</table>
