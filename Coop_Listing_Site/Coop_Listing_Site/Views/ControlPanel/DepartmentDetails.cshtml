@model Coop_Listing_Site.Models.ViewModels.DepartmentModel

@{
    ViewBag.Title = "Department Details";
    Layout = "~/Views/Shared/_CP_Layout.cshtml";
}

<h2>Department Details</h2>

<div>
    <h4>Department</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.DepartmentName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DepartmentName)
        </dd>
        <br />
        <dt>
            @Html.DisplayNameFor(model => model.Majors)
        </dt>

        @if (Model.Majors.Count > 0)
        {
            foreach (var major in Model.Majors)
            {
                <dd>
                    @major.MajorName
                </dd>
            }
        }
        else
        {
            <dd>
                None
            </dd>
        }

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "EditDepartment", new { id = Model.DepartmentID }, new { @class = "btn btn-primary" }) |
    @Html.ActionLink("Back to List", "DepartmentList")
</p>
