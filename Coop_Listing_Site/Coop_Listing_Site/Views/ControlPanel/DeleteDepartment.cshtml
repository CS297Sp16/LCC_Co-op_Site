@model Coop_Listing_Site.Models.ViewModels.DepartmentModel

@{
    ViewBag.Title = "DeleteDepartment";
    Layout = "~/Views/Shared/_CP_Layout.cshtml";
}

<h2>Delete Department</h2>

<h3>Are you sure you want to delete this?</h3>
<p>Deleting this will orphan any Majors in this department until they are added to a new department.</p>
<p>It will also remove the link any opportunities have to this department.</p>

<div>
    <h4>Department</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.DepartmentName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DepartmentName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Majors)
        </dt>

        @if(Model.Majors.Count > 0)
        {
            foreach(var major in Model.Majors)
            {
                <dd>
                    @major.MajorName
                </dd>
            }
        }
        else
        {
            <dd>
                None
            </dd>
        }

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-primary" /> |
            @Html.ActionLink("Back to List", "DepartmentList", new { id = Model.DepartmentID }, new { @class = "btn btn-primary" })
        </div>
    }
</div>
